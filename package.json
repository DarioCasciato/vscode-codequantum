{
  "name": "codequantum",
  "displayName": "CodeQuantum",
  "description": "Quickly count lines in files and workspaces. Know your code at a glance",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.82.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onTextDocumentChanged",
    "onTextDocumentOpened"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
        "type": "object",
        "title": "CodeQuantum",
        "properties": {
            "CodeQuantum.statusBarAlignment": {
                "type": "string",
                "enum": ["left", "right"],
                "default": "right",
                "description": "Choose where the counter should be displayed in the status bar."
            }
        }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@types/vscode": "^1.82.0",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "@vscode/test-electron": "^2.3.2",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.1.3"
  },
  "dependencies": {
    "ignore": "^5.2.4"
  }
}
